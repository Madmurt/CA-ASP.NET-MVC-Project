@model CA_Gym.Models.MemberShipType

@{
    ViewBag.Title = "MemberType";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-md-10">
           @using (Html.BeginForm("MemberType", "User", FormMethod.Post, new { @class = "form-group" }))
            {
            @Html.AntiForgeryToken()
                <h2 class="display-4 mb-5">Choose Which Membership You Want..</h2>
                @Html.ValidationSummary(false, "", new { @class = "error" })
            <div class="form-group">
                @Html.LabelFor(model => model.MemType, "Membership Type", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.MemType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemType, "", new { @class = "text-danger" })
                
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.JoinDate, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.JoinDate, "Join Date", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JoinDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RenewalDate, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.RenewalDate, "Renewal Date" , new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RenewalDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GymLocation, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.GymLocation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GymLocation, "", new { @class = "text-danger" })
            </div>



                <input id="Submit1" type="submit" value="Submit" class="btn btn-primary btn-block mt-4" />
                <input id="Reset1" type="reset" value="Clear" class="btn btn-danger btn-block mt-2" />

            }
        </div>
    </div>

</div>

