@model CA_Gym.Models.Class
@{
    ViewBag.Title = "AddClass";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("AddClass", "Classes", FormMethod.Post))
            {
                <form class="form-group ">
                    <h2 class="display-4 py-3 mt-4">Add New Class</h2>
                    @Html.ValidationSummary(false, "", new { @class = "error" })

                    
                    <div class="form-group row">
                        @Html.LabelFor(c => c.TrainerID, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.DropDownListFor(c => c.TrainerID, new SelectList((List<string>)ViewBag.TrainerList))
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(c => c.Time, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.Time, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(c => c.ClassType, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.ClassType, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(c => c.Location, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.Location, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(c => c.MaxMembers, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.MaxMembers, new { @class = "form-control" })
                        </div>
                    </div>

                    <input id="Submit1" type="submit" value="Add Class" class="btn btn-success" />
                    <input id="Reset1" type="reset" value="Clear Form" class="btn btn-danger" />

                </form>
            }
        </div>
    </div>

</div>

