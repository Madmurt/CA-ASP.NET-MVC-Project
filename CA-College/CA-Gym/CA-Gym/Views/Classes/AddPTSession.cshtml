@model CA_Gym.Models.PTSession
@{
    ViewBag.Title = "AddPTSession";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("AddPTSession", "Classes", FormMethod.Post))
            {
                <form class="form-group ">
                    <h2 class="display-4 py-3 mt-4">Book a Personal Trainer Session</h2>
                    @Html.ValidationSummary(false, "", new { @class = "error" })

                    <div class="form-group row">
                        @Html.Label("Choose Your Trainer: ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.DropDownList("TrainerList", new SelectList((List<string>)ViewBag.TrainerList))
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.Label("Choose Location: ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.DropDownList("LocationList", new SelectList((List<string>)ViewBag.LocationList))
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.Label("Type of Session: ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.DropDownList("TypeList", new SelectList((List<string>)ViewBag.TypeList))
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.Label("Session Length (In hours, 1 = 1 hour, 2 = 2 hours, etc. We charge €20 per hour): ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(u => u.SessionLength, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.Label("Date: ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(u => u.SessionDate, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.Label("Time: ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(u => u.SessionTime, new { @class = "form-control" })
                        </div>
                    </div>

                    <input id="Submit1" type="submit" value="Book PT Session" class="btn btn-success" />
                    <input id="Reset1" type="reset" value="Clear Form" class="btn btn-danger" />

                </form>
            }
        </div>
    </div>

</div>

