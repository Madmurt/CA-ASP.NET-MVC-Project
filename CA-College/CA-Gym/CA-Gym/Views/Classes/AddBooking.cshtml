@model CA_Gym.Models.Booking
@{
    ViewBag.Title = "Book a Class";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("AddBooking", "Classes", FormMethod.Post))
            {
                <form class="form-group ">
                    <h2 class="display-4 py-3 mt-4">Book a Class</h2>
                    @Html.ValidationSummary(false, "", new { @class = "error" })


                    <div class="form-group row">
                        @Html.Label("Classes: ", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.DropDownList("ClassList", new SelectList((List<string>)ViewBag.ClassList))
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(b => b.Date, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(b => b.Date, new { @class = "form-control" })
                        </div>
                    </div>

                    <input id="Submit1" type="submit" value="Book Class" class="btn btn-success" />
                    <input id="Reset1" type="reset" value="Clear Form" class="btn btn-danger" />

                </form>
            }
        </div>
    </div>

</div>

